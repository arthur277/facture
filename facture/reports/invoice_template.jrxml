<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="Invoice" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20"
    rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="REPORT_LOCALE" class="java.lang.String" />
    <parameter name="INVOICE_LOGO" class="java.lang.String" />

    <field name="invoice.number" class="java.lang.Integer" />
    <field name="invoice.label" class="java.lang.String" />
    <field name="invoice.emission_date" class="java.lang.String" />
    <field name="invoice.due_date" class="java.lang.String" />
    <field name="invoice.amount" class="java.lang.Double" />
    <field name="invoice.discount" class="java.lang.Double" />
    <field name="invoice.taxe" class="java.lang.Double" />
    <field name="invoice.paid_amount" class="java.lang.Double" />
    <field name="invoice.user.username" class="java.lang.String" />
    <field name="invoice.user.first_name" class="java.lang.String" />
    <field name="invoice.user.last_name" class="java.lang.String" />
    <field name="invoice.user.email" class="java.lang.String" />

    <title>
        <band height="79" splitType="Stretch">
            <image>
                <reportElement x="0" y="0" width="150" height="70" />
                <imageExpression><![CDATA[$P{INVOICE_LOGO}]]></imageExpression>
            </image>
            <textField>
                <reportElement x="200" y="20" width="355" height="30" />
                <textElement textAlignment="Right">
                    <font size="22" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA["FACTURE #" + $F{invoice.number}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="120">
            <staticText>
                <reportElement x="0" y="10" width="270" height="20" />
                <textElement>
                    <font size="14" isBold="true" />
                </textElement>
                <text><![CDATA[Informations Client:]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="270" height="20" />
                <textElement>
                    <font size="12" />
                </textElement>
                <textFieldExpression><![CDATA[$F{invoice.user.first_name} + " " + $F{invoice.user.last_name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="55" width="270" height="20" />
                <textElement>
                    <font size="12" />
                </textElement>
                <textFieldExpression><![CDATA[$F{invoice.user.username}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="75" width="270" height="20" />
                <textElement>
                    <font size="12" />
                </textElement>
                <textFieldExpression><![CDATA[$F{invoice.user.email}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="10" width="255" height="20" />
                <textElement>
                    <font size="12" isBold="true" />
                </textElement>
                <text><![CDATA[Détails Facture:]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="35" width="100" height="20" />
                <text><![CDATA[Date d'émission:]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="35" width="155" height="20" />
                <textFieldExpression><![CDATA[$F{invoice.emission_date}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="300" y="55" width="100" height="20" />
                <text><![CDATA[Date d'échéance:]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="55" width="155" height="20" />
                <textFieldExpression><![CDATA[$F{invoice.due_date}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <detail>
        <band height="200">
            <staticText>
                <reportElement x="0" y="20" width="555" height="30" />
                <textElement>
                    <font size="14" isBold="true" />
                </textElement>
                <text><![CDATA[Description:]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="50" width="555" height="30" />
                <textElement>
                    <font size="12" />
                </textElement>
                <textFieldExpression><![CDATA[$F{invoice.label}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="100" width="100" height="20" />
                <text><![CDATA[Montant HT:]]></text>
            </staticText>
            <textField pattern="#,##0.00 €">
                <reportElement x="400" y="100" width="155" height="20" />
                <textElement textAlignment="Right" />
                <textFieldExpression><![CDATA[$F{invoice.amount}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="120" width="100" height="20" />
                <text><![CDATA[Remise:]]></text>
            </staticText>
            <textField pattern="#,##0.00 €">
                <reportElement x="400" y="120" width="155" height="20" />
                <textElement textAlignment="Right" />
                <textFieldExpression><![CDATA[$F{invoice.discount}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="140" width="100" height="20" />
                <text><![CDATA[TVA:]]></text>
            </staticText>
            <textField pattern="#,##0.00 %">
                <reportElement x="400" y="140" width="155" height="20" />
                <textElement textAlignment="Right" />
                <textFieldExpression><![CDATA[$F{invoice.taxe}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="170" width="100" height="20" />
                <textElement>
                    <font size="12" isBold="true" />
                </textElement>
                <text><![CDATA[Total TTC:]]></text>
            </staticText>
            <textField pattern="#,##0.00 €">
                <reportElement x="400" y="170" width="155" height="20" />
                <textElement textAlignment="Right">
                    <font size="12" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA[$F{invoice.amount} - $F{invoice.discount} + ($F{invoice.amount} - $F{invoice.discount}) * $F{invoice.taxe} / 100]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="50">
            <line>
                <reportElement x="0" y="0" width="555" height="1" />
            </line>
            <textField>
                <reportElement x="0" y="10" width="555" height="30" />
                <textElement textAlignment="Center">
                    <font size="10" />
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport> 